{
	"appId": "RGIO-host-id",
	"productName": "RGIO-host",
	"copyright": "Copyright Â© 2019 ${author}",
	"asar": false,
	"directories": {
		"output": "./dist"
		// "app": "./"
	},
	"win": {
		"target": [
			{
				"target": "nsis",
				"arch": ["x64"]
			}
		]
	},
	"linux": {
		"target": [
			{
				"target": "snap",
				"arch": ["x64"]
			}
		]
	},
	"nsis": {
		// "include": "./installers/installer.nsh",
		"license": "./misc/eula/eula.txt",
		"oneClick": true,
		"perMachine": false,
		"allowElevation": true,
		"allowToChangeInstallationDirectory": false,
		"artifactName": "${productName}-setup-v${version}.${ext}",
		"createDesktopShortcut": true,
		"createStartMenuShortcut": true
		// "publish": {
		// 	"provider": "s3",
		// 	"bucket": "RGIO-host",
		// 	"acl": "public-read",
		// 	"storageClass": "STANDARD",
		// 	"encryption": "AES256",
		// 	"channel": "latest",
		// 	"path": "/",
		// 	"endpoint": "https://s3.amazonaws.com"
		// }
	},
	"nsisWeb": {},
	"publish": {
		"provider": "generic",
		"url": "https://rgio-host.s3.amazonaws.com",
		"channel": "latest"
	},
	"files": [
		// exclude:
		"!eula",
		"!.babelrc",
		"!.prettierrc",
		"!README.md",
		"!*.log",
		"!*.bat",
		"!webpack.*.js",
		"!bundles/*.map",
		"!src",
		"!*.yml",
		"!scripts/*",
		"!.vscode/*",
		// include:
		"build",
		"bundles",
		"hostControl",
		"node_modules",
		"index.html",
		"package.json",
		"main.js",
		"renderer.js",
		"update.js",
		"misc"
	],
	"extraResources": "",
	"extraFiles": "",
	// "npmRebuild": false
	"npmRebuild": true
